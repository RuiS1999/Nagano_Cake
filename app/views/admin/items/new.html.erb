 <div class="container">
    <div class="col-md-10 col-lg-9 col-xl-7 mx-auto">
      <h1>商品新規登録</h1>
      <%= render "layouts/error_messages", resource: @item %>
      <div>
        <%= form_with model: [:admin, @item] do |f| %>
        <div class="mb-4 p-2 bg-light rounded">
          <div class="p-2">
            <div>商品イメージ画像</div>
            <div><%= f.file_field :image, placeholder: "商品イメージ", accept: "image/*" %></div>
          </div>
          <div class="p-2">
            <div>商品名</div>
            <div><%= f.text_field :name, class: "w-100 form-control" %></div>
          </div>
          <div class="p-2">
            <div>商品説明文</div>
            <div><%= f.text_area :introduction, class: "w-100 form-control", :size=>"100%x5" %></div>
          </div>
          <div class="p-2">
            <div>ジャンル</div>
            <div><%= f.select :genre_id, Genre.all.map { |genre| [genre.name, genre.id] } %></div>
          </div>
          <div class="p-2">
            <div>税抜き価格</div>
            <div><%= f.text_field :price_out, class: "w-100 form-control" %></div>
          </div>
          <div class="p-2">
            <div>販売ステータス</div>
            <div><%= f.select :is_active, {'販売中': true, '売切れ': false} %></div>
          </div>
        </div>
        <div>
          <div>
            <div class="text-left"><%= f.submit '商品登録', class: "btn btn-primary my-2 w-50 py-2" %></div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>