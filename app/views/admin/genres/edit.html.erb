<div class="container">
  <div class="col-md-8 col-lg-6 mx-auto">
    <h1>ジャンル編集</h1>
    <%= render "layouts/error_messages", resource: @genre %>
    <div class="p-4">
      <%= form_with model: @genre, url: admin_genre_path(@genre.id) do |f| %>
      <div class="mb-4 p-2 bg-light rounded">
        <div class="p-2">
          <div>ジャンル名</div>
          <div><%= f.text_field :name, class: "w-100" %></div>
        </div>
      </div>
      <div>
        <div>
          <div class="text-left">
            <%= link_to '戻る', admin_genres_path, class: "btn btn-success m-2 w-25 py-2" %>
            <%= f.submit '変更内容を保存', class: "btn btn-primary my-2 w-50 py-2" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
