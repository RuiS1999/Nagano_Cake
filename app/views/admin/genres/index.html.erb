<div class="container">
  <div class="col-md-8 col-lg-6 col-xl-6 mx-auto">
    <h1>ジャンル登録 / 一覧</h1>
    <%= render "layouts/error_messages", resource: @genre %>
    <div>
      <%= form_with model: [:admin, @genre] do |f| %>
        <div class="p-4">
          <h4 class="headline-blue">ジャンル登録</h4>
          <div class="mb-4 p-2 bg-light rounded w-75">
            <div class="p-2">
              <div>ジャンル</div>
              <div><%= f.text_field :name, autocomplete: "name", class: "w-100" %></div>
            </div>
          </div>
          <div>
            <div>
              <div class="text-left"><%= f.submit 'ジャンルを登録', class: "btn btn-primary my-2 w-50 py-2" %></div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="p-4">
      <h4 class="headline-blue">ジャンル一覧</h4>
        <table class="table text-center">
          <thead>
            <tr class="table-active">
              <th>ジャンル名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-sm btn-outline-success px-4" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

