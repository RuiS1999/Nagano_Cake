<div class="container">
  <div class="row">
    <div class="px-2 mx-auto mx-sm-2">
      <h1>商品一覧<span class="h4 px-2">(全<%= @total_items.count %>件)</span></h1>
    </div>
  </div>
  <div class="row mt-3 mb-3">
    <% @items.each do |item| %>
      <div class="col-sm-8 col-md-6 col-lg-3">
        <div class="card w-100 bg-transparent border-0 m-2" style="width: 18rem;">
          <%= link_to item_path(item.id) do %>
            <p><%= image_tag item.get_image(900,650), class: "img-wrap" %></p>
          <% end %>
          <div class="card-body mt-0">
            <h4 class="item-details item-name card-text"><%= item.name %></h4>
            <% if item.is_active == true %>
              <h6 class="item-details card-text">¥<%= item.add_tax_price %>(税込)</h6>
            <% else %>
              <h6 class="text-danger font-weight-bold card-text">売り切れ</p>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate(@items) %>
</div>
